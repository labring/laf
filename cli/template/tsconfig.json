{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "functions/*"
      ]
    },
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": false,
    "module": "Node16",
    "declarationMap": true,
    // "declarationDir": "types",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "pretty": true,
    "removeComments": true,
    "stripInternal": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "alwaysStrict": true,
    "lib": [
      "ES2022"
    ]
  },
  "include": [
    "functions/**/*",
    "types/**/*"
  ],
  "exclude": [
    "tests"
  ]
}